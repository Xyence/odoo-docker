{
  "regexManagers": [
    {
      "datasourceTemplate": "github-tags",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "git clone --branch (?<currentValue>.*) --depth 1 https:\/\/github\\.com\/(?<depName>.*?\/.*?)\\.git"
      ]
    },
    {
      "datasourceTemplate": "docker",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM\\s+(?<depName>.*?):(?<currentValue>)"
      ]
    }
  ],
  "extends": [
    "config:base"
  ],
  "semanticCommitType": "build"
}
